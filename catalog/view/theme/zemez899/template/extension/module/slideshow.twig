<div class="tm-container ">
<div class="tm-inner">

<div class="row row-level-1 ">
<div class="row-inner block-slider clearfix">
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
<div class="col-inner ">
<div id="slideshow{{ module }}" class="swiper-container swiper-slider swiper-container-horizontal swiper-container-fade swiper-container-android" data-loop="true" data-autoplay="5000" data-height="648px" data-min-height="350px" data-slide-effect="fade" data-slide-speed="1200ms" data-keyboard="false" data-mousewheel="false" data-mousewheel-release="false" style="height: 648px;">

<div class="swiper-wrapper" style="transition-duration: 0ms;">
{% for banner in banners %}
	<div class="swiper-slide" data-slide-bg="{{ banner.image }}" style="background-image: url(&quot;{{ banner.image }}&quot;); background-size: cover; width: 1024px; transform: translate3d(0px, 0px, 0px); opacity: 1; transition-duration: 0ms;">
		<div class="container">
			<div class="container">
				<div class="desc">
					<h2 data-caption-animate="slideInLeft" class="not-animated">{{ banner.title }}</h2>
					<p data-caption-animate="slideInLeft" data-caption-delay="200" class="not-animated">{{ banner.description }}</p>
					{% if banner.link %}
						<a data-caption-animate="slideInUp" href="{{ banner.link }}" class="btn-primary not-animated">{{ banner.button_text }}</a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>

{% endfor %} 
<div class="swiper-button-next"></div>
<div class="swiper-button-prev"></div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>